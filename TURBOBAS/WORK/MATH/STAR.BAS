  CLS
  SCREEN 12
  COLOR 15,8
  A=320
  B=240
  FOR X=-500 TO 500
  B.X=X
  B.Y=Y
  IF X=0 THEN X=0.2
  LET Y=(5/X)*100
  LINE(320,0)-(320,480),0
  LINE(A-X,B-Y)-(A-B.X,B-B.Y),4
  LINE(A+X,B-Y)-(A+B.X,B-B.Y),4
  NEXT
  PAINT(320,240),2,4
  FOR X=0 TO 640 STEP+3
  FOR Y=0 TO 480 STEP+3
  IF POINT(X,Y)=2 THEN PSET(X,Y),10
  NEXT
  NEXT
  END

