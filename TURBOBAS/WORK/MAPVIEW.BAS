   CLS
   IF COMMAND$="" THEN CLS:PRINT"Usage: Mapview.exe <filename.map>":END
   LET NAM$=COMMAND$
   DIM PA%(25000)
   DIM PB%(25000)
   DIM PC%(25000)
   LET WORMA$="C4 U5 E2 R3 F2 D8 G2 L3 H2 U5 D5 F2 G2 D2 F2 G1 D2 F1 G2 L2 H3 D3 F3 R5 E2 U3 E1 U2 H1 E2 U2 H2 BU6 U1 BL3 D1"
   LET WORMB$="C1 U5 E2 R3 F2 D8 G2 L3 H2 U5 D5 F2 G2 D2 F2 G1 D2 F1 G2 L2 H3 D3 F3 R5 E2 U3 E1 U2 H1 E2 U2 H2 BU6 U1 BL3 D1"
   SCREEN 12
   COLOR 15,8
   COLOR 4
   LOCATE 1,2
   PRINT"File - "
   COLOR 14
   LOCATE 1,9
   PRINT NAM$
   LINE(0,0)-(639,32),15,B
   LINE(0,35)-(639,479),15,B
   PAINT(320,240),8,15
   LOCATE 2,2
   COLOR 10
   PRINT"Wait! Loading!"
'OPENIT
   OPEN NAM$ FOR INPUT AS #1
   INPUT #1,X
   INPUT #1,Y
   INPUT #1,A
   INPUT #1,B
   FOR ION=0 TO 25000
   INPUT #1,PA%(ION)
   NEXT ION
   FOR ION=0 TO 25000
   INPUT #1,PB%(ION)
   NEXT ION
   FOR ION=0 TO 25000
   INPUT #1,PC%(ION)
   NEXT ION
   CLOSE #1
   PUT(0,35),PA%,PSET
   PUT(214,35),PB%,PSET
   PUT(428,35),PC%,PSET
   PSET(X,Y),3
   DRAW WORMA$
   PSET(A,B),3
   DRAW WORMB$
   LOCATE 2,2
   PRINT"Done!                  "
   DO
   LOOP UNTIL INKEY$=CHR$(27)
   END


