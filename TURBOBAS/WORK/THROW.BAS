  SCREEN 12
  DO
  X=640   REM X-COORD
  Y=350   REM Y-COORD
  HI=1    REM STARTING HEIGHT
  ANG=250 REM ANGLE
  ANG=ANG/180*3.141593
  FOR N=1 TO 150
  PSET(X+A,Y+B),0
  DRAW"C0 R5 D5 L5 U5"
  A=COS(ANG)*HI
  B=SIN(ANG)*HI
  HI=HI+3
  ANG=ANG-0.01
  PSET(X+A,Y+B),15
  DRAW"C15 R5 D5 L5 U5"
  FOR NA=1 TO 1000
  NEXT NA
  NEXT N
  LOOP UNTIL INKEY$=CHR$(27)  REM PRESS ESC TO FINISH
  END
