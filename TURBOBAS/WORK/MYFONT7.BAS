  REM JUST ENTER SOMETHING AND IT'LL BE FONTED WITH A SHADOW
  REM NOTE: IF YOU DON'T WANT THE SHADOW WRITE % AT THE END
  SCREEN 12
  LOCATE 1,1
  INPUT"",A$
  IF RIGHT$(A$,1)="%" THEN A=INSTR(A$,"%"):LOCATE 1,A:PRINT" ":GOTO NOSHADOW
  FOR A=0 TO 320
  FOR B=0 TO 50
  N=B*2
  IF POINT(A,B)=15 THEN LINE(A*2-N+24,B*2+100+3)-(A*2-N+2+24,B*2+102+3),8,BF
  NEXT
  NEXT
NOSHADOW:
  FOR A=0 TO 320
  FOR B=0 TO 50
  IF POINT(A,B)=15 THEN LINE(A*2,B*2+100)-(A*2+2,B*2+102),10,BF:CIRCLE(A*2+2,B*2+102),2,4
  NEXT
  NEXT
  END
