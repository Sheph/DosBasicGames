   CLS
   SCREEN 12
   X=2
   Y=1
   CL=15
   COLOR CL
FONT:
   LET A$=INKEY$
   IF A$=CHR$(27) THEN END
   IF A$=CHR$(13) THEN LOCATE Y,X:PRINT" ":X=0:IF Y<22 THEN Y=Y+1:GOTO CHA
   IF A$=CHR$(0)+"H" THEN LOCATE Y,X:PRINT" ":X=X-1:IF Y>1 THEN Y=Y-1:GOTO CHA
   IF A$=CHR$(0)+"P" THEN LOCATE Y,X:PRINT" ":X=X-1:IF Y<22 THEN Y=Y+1:GOTO CHA
   IF A$=CHR$(0)+"M" THEN GOTO FONT
   IF A$=CHR$(0)+"K" THEN GOTO FONT
   IF A$=CHR$(0)+";" THEN GOTO SCRYPT
   IF A$=CHR$(0)+"<" THEN GOTO FONT
   IF A$=CHR$(0)+"=" THEN GOTO FONT
   IF A$=CHR$(0)+">" THEN GOTO FONT
   IF A$=CHR$(0)+"?" THEN GOTO FONT
   IF A$=CHR$(0)+"@" THEN GOTO FONT
   IF A$=CHR$(0)+"A" THEN GOTO FONT
   IF A$=CHR$(0)+"B" THEN GOTO FONT
   IF A$=CHR$(0)+"C" THEN GOTO FONT
   IF A$=CHR$(0)+"D" THEN GOTO FONT
   IF A$=CHR$(0)+"R" THEN GOTO FONT
   IF A$=CHR$(0)+"S" THEN GOTO FONT
   IF A$=CHR$(0)+"G" THEN GOTO FONT
   IF A$=CHR$(0)+"O" THEN GOTO FONT
   IF A$=CHR$(0)+"I" THEN GOTO FONT
   IF A$=CHR$(0)+"Q" THEN GOTO FONT
   IF A$="" THEN GOSUB CHECK:X=X-1:LOCATE Y,X:PRINT" ":LOCATE Y,X:PRINT"_":GOTO FONT
   IF A$="" THEN GOTO FONT
CHA:
   IF X<1 THEN X=1
   IF X>75 THEN LOCATE Y,X:PRINT" ":X=1:Y=Y+1
   IF Y>23 THEN Y=23
   LOCATE Y,X+1
   PRINT"_"
   LOCATE Y,X
   IF A$=CHR$(0)+"H" THEN A$=""
   IF A$=CHR$(0)+"P" THEN A$=""
   IF A$=CHR$(13) THEN A$=""
   PRINT A$:X=X+1
   GOTO FONT
   END
CHECK:
   IF X<3 AND Y=1 THEN X=3:GOTO FONT
   IF X<3 THEN LOCATE Y,X:PRINT" ":X=76:Y=Y-1:GOTO FONT
   LOCATE Y,X
   PRINT" "
   RETURN
   END
SCRYPT:
   FOR A=1 TO 640
   FOR B=1 TO 480
   IF POINT(A,B)=CL THEN PSET(A,B-1),8:DRAW"C15 U1"
   NEXT
   NEXT
   GOTO FONT
   END
