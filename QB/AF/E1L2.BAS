   IF SCENE = 4 THEN GOSUB ROCKFALL
   IF SCENE = 6 AND X > 300 AND BUILD = 0 THEN GOSUB BUILDWALL
   PUT (X, Y), PLANE, XOR
   IF ENEMY = 1 THEN PUT (A, B), ENEMY, XOR
   IF SCENE = 4 THEN PUT (XPUT%, NY), SPRITE19, XOR
