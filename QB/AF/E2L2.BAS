   B = B + K
   RETURN
   END
DOIT:
   FOR BO = 31 TO 348
   IF POINT(A - 50, BO) <> 0 AND BO > B THEN K = -6: GOTO CN
   IF POINT(A - 50, BO) <> 0 AND BO < B THEN K = 6: GOTO CN
   IF POINT(A - 50, BO) <> 0 AND BO = B THEN K = 0: GOTO CN
   NEXT
   GOTO CN
   END
RUNWALL:
   IF RA >= 250 THEN KA = -5 / 5.0
   IF RA <= 40 THEN KA = 5 / 5.0
   RA = RA + KA
   RETURN

